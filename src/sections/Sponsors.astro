---
import AlexitooDevLogo from "@/icons/AlexitooDevLogo.astro";
import GoldenGymIcon from "@/icons/GoldenGymIcon.astro";
import HolyHostingLogo from "@/icons/HolyHostingLogo.astro";
import InfoDaltenIcon from "@/icons/InfoDaltenIcon.astro";
import TresdeLogo from "@/icons/TresdeLogo.astro";
import { LucideHandshake, LucideExternalLink } from "lucide-preact";

const SPONSORS = [
  {
    name: "Holy Hosting",
    logo: HolyHostingLogo,
    url: "https://holy.gg",
    desc: "Hosting de Calidad",
  },
  {
    name: "TRESDEUY",
    logo: TresdeLogo,
    url: "https://www.instagram.com/3deuy/",
    desc: "Impresión 3D",
  },
  {
    name: "Alexitoo.DEV",
    logo: AlexitooDevLogo,
    url: "https://alexitoo.dev",
    desc: "Desarrollo Web",
  },
  {
    name: "Golden GYM",
    logo: GoldenGymIcon,
    url: "https://www.instagram.com/goldengymsalto/",
    desc: "Entrenamiento",
  },
  {
    name: "InfoDalten",
    logo: InfoDaltenIcon,
    url: "https://www.instagram.com/infodalten/",
    desc: "Tecnología",
  },
];
---

<section id="sponsors" class="relative px-4 overflow-hidden">
  {/* Fondo decorativo sutil */}
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[300px] bg-blue-900/10 blur-[100px] rounded-full"
    >
    </div>
  </div>

  <div class="max-w-6xl mx-auto text-center mb-12">
    <div
      class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-yellow-400 text-xs font-bold uppercase tracking-widest mb-4"
    >
      <LucideHandshake size={14} /> Partners Oficiales
    </div>

    <h2
      class="text-4xl md:text-5xl font-anton text-white uppercase tracking-wide mb-4"
    >
      Nuestros <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-500"
        >Patrocinadores</span
      >
    </h2>
    <p class="text-white/60 font-rubik text-lg max-w-2xl mx-auto">
      Marcas y proyectos que confían en la comunidad y hacen posible que sigamos
      creciendo día a día.
    </p>
  </div>

  <div
    class="max-w-7xl mx-auto grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 md:gap-6"
  >
    {
      SPONSORS.map((sponsor) => (
        <a
          href={sponsor.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group relative flex flex-col items-center justify-center p-6 h-40 md:h-48 rounded-2xl border border-white/5 bg-[#0a0a0a] overflow-hidden transition-all duration-500 hover:border-white/20 hover:-translate-y-1 hover:shadow-2xl hover:shadow-purple-900/10"
        >
          {/* Fondo gradiente al hover */}
          <div class="absolute inset-0 bg-gradient-to-b from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

          {/* Logo */}
          <div class="relative z-10 flex flex-col items-center gap-3">
            <div class="h-16 md:h-20 w-auto flex items-center justify-center transition-all duration-500 filter grayscale opacity-50 group-hover:grayscale-0 group-hover:opacity-100 group-hover:scale-110 drop-shadow-lg">
              <sponsor.logo class="h-full w-auto object-contain" />
            </div>

            {/* Texto (Aparece/Se ilumina al hover) */}
            <div class="flex flex-col items-center">
              <span class="text-xs font-bold text-white/40 group-hover:text-white transition-colors uppercase tracking-wider text-center">
                {sponsor.name}
              </span>
              {sponsor.desc && (
                <span class="text-[10px] text-white/20 group-hover:text-yellow-400/80 transition-colors scale-0 group-hover:scale-100 h-0 group-hover:h-auto duration-300">
                  {sponsor.desc}
                </span>
              )}
            </div>
          </div>

          {/* Icono Link (Esquina) */}
          <div class="absolute top-3 right-3 text-white/20 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-2 group-hover:translate-x-0">
            <LucideExternalLink size={14} />
          </div>
        </a>
      ))
    }
  </div>

  {/* Botón CTA para ser sponsor */}
  <div class="mt-16 text-center">
    <p class="text-white/40 text-sm mb-4">¿Quieres apoyar a la comunidad?</p>
    <a
      href="mailto:contacto@saltouruguayserver.com"
      class="inline-flex px-6 py-3 rounded-xl border border-white/10 bg-white/5 text-white font-bold hover:bg-white/10 hover:border-white/20 transition-all uppercase tracking-wide text-sm"
    >
      Conviértete en Sponsor
    </a>
  </div>
</section>
