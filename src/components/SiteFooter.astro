---
import { SOCIAL_NETWORKS } from "@/consts/SocialNetworks";
import { LucideHeart, LucideExternalLink } from "lucide-preact";

const YEAR = new Date().getFullYear();

const LINKS = [
  { name: "Inicio", href: "/" },
  { name: "Torneos", href: "/torneos" },
  { name: "Comunidad", href: "/comunidad" },
  { name: "Noticias", href: "/noticias" },
];

const LEGAL = [
  { name: "Políticas de Privacidad", href: "/privacidad" },
  { name: "Términos y Condiciones", href: "/terminos" },
  { name: "Reglamento", href: "/reglamento" }, // Agregado sugerido
];
---

<footer
  class="relative mt-auto border-t border-white/10 bg-[#050505] pt-16 pb-8 overflow-hidden"
>
  {/* Fondo Ambiental Sutil */}
  <div
    class="absolute inset-0 bg-[url('/images/pattern-grid.svg')] opacity-[0.02] pointer-events-none"
  >
  </div>
  <div
    class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[800px] h-[300px] bg-blue-900/5 blur-[100px] rounded-full pointer-events-none"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    {/* --- TOP SECTION (GRID) --- */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 mb-12">
      {/* 1. BRANDING */}
      <div class="space-y-4">
        <a href="/" class="flex items-center gap-3 group w-max">
          <img
            src="/favicon.svg"
            alt="Logo"
            class="size-10 opacity-80 group-hover:opacity-100 group-hover:scale-110 transition-all duration-300"
          />
          <div class="flex flex-col">
            <span
              class="font-anton text-xl text-white tracking-wide leading-none"
              >SALTO URUGUAY</span
            >
            <span
              class="font-mono text-[10px] text-white/40 tracking-[0.2em] uppercase group-hover:text-blue-400 transition-colors"
              >Server Community</span
            >
          </div>
        </a>
        <p class="text-white/50 text-sm font-rubik leading-relaxed max-w-xs">
          La comunidad de gaming más grande de la región. Torneos, eventos y
          diversión sin límites.
        </p>
      </div>

      {/* 2. EXPLORAR */}
      <div>
        <h3
          class="font-bold text-white uppercase tracking-widest text-xs mb-4 flex items-center gap-2"
        >
          <span class="w-2 h-2 bg-blue-500 rounded-full"></span> Explorar
        </h3>
        <ul class="space-y-2">
          {
            LINKS.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-white/60 hover:text-white hover:translate-x-1 transition-all duration-200 text-sm inline-block"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* 3. LEGAL */}
      <div>
        <h3
          class="font-bold text-white uppercase tracking-widest text-xs mb-4 flex items-center gap-2"
        >
          <span class="w-2 h-2 bg-purple-500 rounded-full"></span> Legal
        </h3>
        <ul class="space-y-2">
          {
            LEGAL.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-white/60 hover:text-white hover:translate-x-1 transition-all duration-200 text-sm inline-block"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* 4. SOCIAL */}
      <div>
        <h3
          class="font-bold text-white uppercase tracking-widest text-xs mb-4 flex items-center gap-2"
        >
          <span class="w-2 h-2 bg-yellow-500 rounded-full"></span> Conecta
        </h3>
        <div class="flex flex-wrap gap-3">
          {
            SOCIAL_NETWORKS.map((network) => (
              <a
                href={network.url}
                target="_blank"
                rel="noopener noreferrer"
                aria-label={network.name}
                class="group flex items-center justify-center size-10 rounded-xl bg-white/5 border border-white/5 hover:bg-white/10 hover:border-white/20 hover:scale-110 transition-all duration-300"
              >
                <network.icon class="size-5 text-white/70 group-hover:text-white transition-colors" />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    {/* --- DIVIDER --- */}
    <div
      class="h-px w-full bg-gradient-to-r from-transparent via-white/10 to-transparent mb-8"
    >
    </div>

    {/* --- BOTTOM BAR --- */}
    <div
      class="flex flex-col md:flex-row items-center justify-between gap-4 text-xs text-white/40 font-mono"
    >
      <p>&copy; {YEAR} SaltoUruguayServer. Todos los derechos reservados.</p>

      <div class="flex items-center gap-1">
        <span>Desarrollado con</span>
        <LucideHeart
          size={10}
          class="text-red-500 animate-pulse fill-red-500"
        />
        <span>por</span>
        <a
          href="https://instagram.com/alexitoo_uy"
          target="_blank"
          rel="noopener noreferrer"
          class="text-white hover:text-blue-400 underline underline-offset-2 transition-colors font-bold flex items-center gap-1"
        >
          Alexitoo_UY
          <LucideExternalLink size={10} />
        </a>
      </div>
    </div>
  </div>
</footer>
