---
import { CATEGORIES } from "@/awards/Categories";
import { getGroupedVotes } from "@/utils/awards-vote-system";
import { LucideTrophy, LucideBarChart3, LucideCrown } from "lucide-preact";

const groupedVotes = await getGroupedVotes();

// Función helper para fallback de avatar
const getAvatarUrl = (name: string) =>
  `/images/nominees/${name.toLowerCase()}.webp`;
---

<section class="max-w-7xl mx-auto px-4 py-12">
  {/* Header de Sección */}
  <header
    class="mb-10 flex flex-col md:flex-row items-start md:items-center justify-between gap-6 border-b border-white/10 pb-6"
  >
    <div>
      <h2
        class="text-3xl md:text-4xl font-anton uppercase text-white tracking-wide flex items-center gap-3"
      >
        <LucideBarChart3 class="text-blue-500" /> Votos de la Comunidad
      </h2>
      <p class="text-white/60 font-rubik mt-2 max-w-xl">
        Monitorizando los votos de la comunidad.
      </p>
    </div>
  </header>

  {/* Grid de Categorías */}
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    {
      Object.entries(groupedVotes).map(([category, votes]) => {
        // Ordenar por puntos descendente
        const sortedVotes = votes.sort(
          (a, b) => b.roundTotalPoints - a.roundTotalPoints
        );
        const leader = sortedVotes[0];
        const categoryName = CATEGORIES.find(
          (cat) => cat.id === category
        )?.name;
        const totalCategoryPoints = Math.max(
          ...votes.map((v) => v.roundTotalPoints)
        ); // Para escalar las barras

        return (
          <article class="flex flex-col bg-[#0a0a0a]/60 backdrop-blur-md border border-white/10 rounded-2xl overflow-hidden shadow-xl transition-all hover:border-white/20">
            {/* Header Categoría */}
            <div class="p-5 border-b border-white/5 bg-white/[0.02] flex justify-between items-center">
              <h3 class="text-xl font-anton text-white uppercase tracking-wide flex items-center gap-2">
                <LucideTrophy size={18} class="text-yellow-500/80" />
                {categoryName}
              </h3>
              <span class="text-xs font-rubik font-bold text-white/30 uppercase tracking-widest bg-white/5 px-2 py-1 rounded">
                {votes.length} Nominados
              </span>
            </div>

            {/* Lista de Nominados */}
            <div class="p-5 flex flex-col gap-4">
              {sortedVotes.map((vote, index) => {
                const isLeader = index === 0;
                const percentage = vote.percentage.toFixed(1);
                // Calculamos el ancho relativo al líder para que la barra se vea bien
                const relativeWidth =
                  (vote.roundTotalPoints / (leader.roundTotalPoints || 1)) *
                  100;

                return (
                  <div class={`relative group ${isLeader ? "mb-2" : ""}`}>
                    {/* Tarjeta del Nominado */}
                    <div
                      data-nominee-card
                      data-nominee-id={vote.nomineeId}
                      data-category-id={category}
                      data-nominee-name={vote.displayName}
                      class={`
                        relative z-10 flex items-center gap-4 p-3 rounded-xl border transition-all cursor-pointer
                        ${
                          isLeader
                            ? "bg-gradient-to-r from-yellow-500/10 to-transparent border-yellow-500/30 shadow-[0_0_15px_rgba(234,179,8,0.1)]"
                            : "bg-white/5 border-white/5 hover:bg-white/10"
                        }
                    `}
                    >
                      {/* Rank & Avatar */}
                      <div class="flex items-center gap-3 shrink-0">
                        <span
                          class={`font-mono font-bold text-lg w-6 text-center ${isLeader ? "text-yellow-500" : "text-white/30"}`}
                        >
                          #{index + 1}
                        </span>
                        <div class="relative">
                          <img
                            src={getAvatarUrl(vote.nomineeId)}
                            alt={vote.displayName}
                            class={`rounded-full object-cover bg-black ${isLeader ? "size-12 ring-2 ring-yellow-500" : "size-10 grayscale group-hover:grayscale-0 transition-all"}`}
                            onerror={`this.src='https://ui-avatars.com/api/?name=${vote.displayName}&background=random&color=fff'`}
                          />
                          {isLeader && (
                            <div class="absolute -top-3 -right-2 text-yellow-500 drop-shadow-md animate-bounce-small">
                              <LucideCrown size={20} fill="currentColor" />
                            </div>
                          )}
                        </div>
                      </div>

                      {/* Info & Bar */}
                      <div class="flex-1 min-w-0">
                        <div class="flex justify-between items-baseline mb-1">
                          <span
                            class={`font-bold truncate ${isLeader ? "text-white text-lg" : "text-white/80"}`}
                          >
                            {vote.displayName}
                          </span>
                          <div class="flex items-center gap-2 text-xs">
                            <span class="text-white/60 font-mono">
                              {vote.votes} votos
                            </span>
                            <span
                              class={`font-bold ${isLeader ? "text-yellow-400" : "text-white"}`}
                            >
                              {percentage}%
                            </span>
                          </div>
                        </div>

                        {/* Progress Bar Container */}
                        <div class="h-2 w-full bg-black/50 rounded-full overflow-hidden">
                          <div
                            class={`h-full rounded-full transition-all duration-1000 ease-out ${isLeader ? "bg-yellow-500" : "bg-blue-500/60"}`}
                            style={`width: ${percentage}%`}
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                );
              })}
            </div>
          </article>
        );
      })
    }
  </div>
</section>

{/* Dialog de Evolución de Votos */}
<dialog
  id="votes-evolution-dialog"
  class="backdrop:bg-black/80 backdrop:backdrop-blur-sm bg-transparent p-0 max-w-3xl w-full rounded-2xl"
>
  <div
    class="bg-gradient-to-br from-gray-900 via-gray-900 to-black border border-white/10 rounded-2xl overflow-hidden shadow-2xl flex flex-col max-h-[90vh]"
  >
    {/* Header */}
    <div class="p-6 border-b border-white/10 flex flex-col gap-4 bg-white/5">
      <div class="flex justify-between items-start">
        <div>
          <h3
            id="dialog-nominee-name"
            class="text-2xl font-anton text-white uppercase tracking-wide"
          >
            Nombre del Nominado
          </h3>
          <p class="text-white/50 text-sm font-rubik">
            Evolución de votos (1 - 23 Dic)
          </p>
        </div>
        <button
          id="dialog-close"
          class="text-white/50 hover:text-white transition-colors p-2"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg
          >
        </button>
      </div>

      {/* Tabs */}
      <div class="flex gap-2">
        <button
          data-tab="points"
          class="px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition-all bg-yellow-500 text-black"
        >
          Puntos
        </button>
        <button
          data-tab="votes"
          class="px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition-all bg-white/5 text-white/50 hover:bg-white/10 hover:text-white"
        >
          Votos
        </button>
      </div>
    </div>

    {/* Content */}
    <div
      class="p-6 flex-1 min-h-[400px] relative flex items-center justify-center"
    >
      <div
        id="chart-loader"
        class="absolute inset-0 flex items-center justify-center bg-black/50 z-10"
        style="display: none;"
      >
        <div
          class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-yellow-500"
        >
        </div>
      </div>
      <canvas id="vote-evolution-chart"></canvas>
    </div>
  </div>
</dialog>

<script>
  import { $, $$ } from "@/lib/dom-selector";
  import Chart from "chart.js/auto";

  let chartInstance: Chart | null = null;

  const setupVotesDialog = () => {
    const dialog = $("#votes-evolution-dialog") as HTMLDialogElement;
    const closeBtn = $("#dialog-close");
    const cards = $$("[data-nominee-card]");
    const nomineeNameEl = $("#dialog-nominee-name");
    const loader = $("#chart-loader");
    const canvas = $("#vote-evolution-chart") as HTMLCanvasElement;
    const tabs = $$("[data-tab]");

    if (!dialog || !canvas) return;

    const ctx = canvas.getContext("2d");
    if (!ctx) return;

    let currentData: any = null;
    let activeTab = "points";

    const updateChart = (type: string) => {
      if (!chartInstance || !currentData) return;

      const isPoints = type === "points";
      const datasetData = isPoints
        ? currentData.pointsData
        : currentData.votesData;
      const label = isPoints ? "Puntos Acumulados" : "Votos Acumulados";
      const color = isPoints ? "#eab308" : "#3b82f6"; // yellow-500 vs blue-500
      const bgColor = isPoints
        ? "rgba(234, 179, 8, 0.1)"
        : "rgba(59, 130, 246, 0.1)";

      chartInstance.data.datasets[0].data = datasetData;
      chartInstance.data.datasets[0].label = label;
      chartInstance.data.datasets[0].borderColor = color;
      chartInstance.data.datasets[0].backgroundColor = bgColor;
      chartInstance.data.datasets[0].pointBackgroundColor = color;
      chartInstance.data.datasets[0].pointHoverBorderColor = color;

      chartInstance.update();

      // Update tabs UI
      tabs.forEach((tab) => {
        const tabType = tab.getAttribute("data-tab");
        if (tabType === type) {
          tab.className = `px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition-all ${isPoints ? "bg-yellow-500 text-black" : "bg-blue-500 text-white"}`;
        } else {
          tab.className =
            "px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition-all bg-white/5 text-white/50 hover:bg-white/10 hover:text-white";
        }
      });

      activeTab = type;
    };

    // Tab click handlers
    tabs.forEach((tab) => {
      tab.addEventListener("click", () => {
        const type = tab.getAttribute("data-tab");
        if (type && type !== activeTab) {
          updateChart(type);
        }
      });
    });

    cards.forEach((card) => {
      card.addEventListener("click", async () => {
        const nomineeId = card.getAttribute("data-nominee-id");
        const categoryId = card.getAttribute("data-category-id");
        const nomineeName = card.getAttribute("data-nominee-name");

        if (!nomineeId || !categoryId) return;

        if (nomineeNameEl)
          nomineeNameEl.textContent = nomineeName || "Nominado";

        dialog.showModal();

        // Reset tabs to points
        activeTab = "points";
        tabs.forEach((tab) => {
          const tabType = tab.getAttribute("data-tab");
          if (tabType === "points") {
            tab.className =
              "px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition-all bg-yellow-500 text-black";
          } else {
            tab.className =
              "px-4 py-2 rounded-lg text-sm font-bold uppercase tracking-wide transition-all bg-white/5 text-white/50 hover:bg-white/10 hover:text-white";
          }
        });

        // Show loader
        if (loader) loader.style.display = "flex";

        try {
          const response = await fetch(
            `/api/votes-evolution/${categoryId}/${nomineeId}`
          );
          const data = await response.json();
          currentData = data;

          if (chartInstance) {
            chartInstance.destroy();
          }

          if (data.error) {
            console.error(data.error);
            return;
          }

          chartInstance = new Chart(ctx, {
            type: "line",
            data: {
              labels: data.labels,
              datasets: [
                {
                  label: "Puntos Acumulados",
                  data: data.pointsData,
                  borderColor: "#eab308", // yellow-500
                  backgroundColor: "rgba(234, 179, 8, 0.1)",
                  borderWidth: 3,
                  pointBackgroundColor: "#eab308",
                  pointBorderColor: "#fff",
                  pointHoverBackgroundColor: "#fff",
                  pointHoverBorderColor: "#eab308",
                  fill: true,
                  tension: 0.4,
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                legend: {
                  display: false,
                },
                tooltip: {
                  mode: "index",
                  intersect: false,
                  backgroundColor: "rgba(0, 0, 0, 0.8)",
                  titleColor: "#fff",
                  bodyColor: "#fff",
                  borderColor: "rgba(255, 255, 255, 0.1)",
                  borderWidth: 1,
                },
              },
              scales: {
                x: {
                  grid: {
                    color: "rgba(255, 255, 255, 0.05)",
                  },
                  ticks: {
                    color: "rgba(255, 255, 255, 0.5)",
                  },
                },
                y: {
                  beginAtZero: true,
                  grid: {
                    color: "rgba(255, 255, 255, 0.05)",
                  },
                  ticks: {
                    color: "rgba(255, 255, 255, 0.5)",
                  },
                },
              },
              interaction: {
                mode: "nearest",
                axis: "x",
                intersect: false,
              },
            },
          });
        } catch (error) {
          console.error("Error loading chart data", error);
        } finally {
          if (loader) loader.style.display = "none";
        }
      });
    });

    closeBtn?.addEventListener("click", () => {
      dialog.close();
    });

    dialog.addEventListener("click", (e) => {
      if (e.target === dialog) {
        dialog.close();
      }
    });
  };

  document.addEventListener("astro:page-load", setupVotesDialog);
</script>

<style>
  .animate-bounce-small {
    animation: bounce-small 2s infinite;
  }
  @keyframes bounce-small {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }
</style>
