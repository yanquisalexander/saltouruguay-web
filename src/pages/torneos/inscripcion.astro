<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Inscripci√≥n Torneo</title>

<style>
    body {
        font-family: Arial, sans-serif;
        background: #0f172a;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .container {
        background: #111827;
        padding: 30px;
        border-radius: 12px;
        width: 400px;
        box-shadow: 0 0 20px rgba(0,0,0,0.5);
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-top: 15px;
        font-size: 14px;
    }

    input[type="text"],
    input[type="email"] {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border-radius: 6px;
        border: none;
        background: #1f2937;
        color: white;
    }

    input[readonly] {
        opacity: 0.7;
    }

    .checkbox {
        margin-top: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
    }

    button {
        width: 100%;
        margin-top: 20px;
        padding: 12px;
        border: none;
        border-radius: 8px;
        background: #22c55e;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: 0.2s;
    }

    button:hover {
        background: #16a34a;
    }

    .error {
        color: #f87171;
        margin-top: 10px;
        text-align: center;
    }

    .success {
        color: #4ade80;
        margin-top: 10px;
        text-align: center;
    }
</style>
</head>
<body>

<div class="container">
    <h1>Inscripci√≥n Torneo</h1>

    <form id="formInscripcion">
        
        <label>Correo electr√≥nico</label>
        <input type="email" id="email" readonly>

        <label>Usuario de Discord</label>
        <input type="text" id="discord" placeholder="Ej: usuario#1234" required>

        <label>Usuario de Rocket League</label>
        <input type="text" id="rocket" placeholder="Tu Epic / RL ID" required>

        <label>Compa√±ero de equipo (Opcional)</label>
        <input type="text" id="companero" placeholder="Nombre o ID">

        <div class="checkbox">
            <input type="checkbox" id="reglas">
            <label for="reglas">Acepto las reglas del torneo</label>
        </div>

        <button type="submit">Confirmar inscripci√≥n</button>

        <div id="mensaje"></div>
    </form>
</div>

<script>
/* ===============================
   SIMULACI√ìN DE USUARIO LOGUEADO
   üëâ Reemplazar por tu sistema real
================================= */

const usuarioLogueado = {
    email: "usuario@email.com" // <- esto debe venir de tu backend/login
};

// Si no est√° logueado ‚Üí redirige
if (!usuarioLogueado) {
    window.location.href = "/login";
}

// Colocar mail en el input
document.getElementById("email").value = usuarioLogueado.email;


/* ===============================
   VALIDACI√ìN Y ENV√çO
================================= */

document.getElementById("formInscripcion").addEventListener("submit", function(e) {
    e.preventDefault();

    const discord = document.getElementById("discord").value.trim();
    const rocket = document.getElementById("rocket").value.trim();
    const reglas = document.getElementById("reglas").checked;
    const mensaje = document.getElementById("mensaje");

    mensaje.textContent = "";

    if (!reglas) {
        mensaje.className = "error";
        mensaje.textContent = "Debes aceptar las reglas para inscribirte.";
        return;
    }

    // üëâ Aqu√≠ luego conectamos a tu backend / base de datos
    mensaje.className = "success";
    mensaje.textContent = "Inscripci√≥n enviada correctamente üéâ";

    console.log({
        email: usuarioLogueado.email,
        discord,
        rocket,
        companero: document.getElementById("companero").value.trim()
    });
});
</script>

</body>
</html>
