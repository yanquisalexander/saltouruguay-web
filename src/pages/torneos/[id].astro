---
import Layout from "@/layouts/Layout.astro";
import TournamentBracket from "@/components/tournaments/TournamentBracket";
import { client as db } from "@/db/client";
import { TournamentsTable, TournamentParticipantsTable } from "@/db/schema";
import { eq, and, count } from "drizzle-orm";
import { getSession } from "auth-astro/server";
import {
  LucideUsers,
  LucideCalendar,
  LucideTrophy,
  LucidePlay,
  LucideUserPlus,
  LucideShieldAlert,
  LucideSettings,
  LucideSwords,
  LucideExternalLink,
  LucideLock,
} from "lucide-preact";

const { id } = Astro.params;
const tournamentId = parseInt(id!);

if (isNaN(tournamentId)) {
  return Astro.redirect("/torneos");
}

const session = await getSession(Astro.request);
const user = session?.user;

// Verificación de Rol de Administrador (compatibilidad: admin | isAdmin)
const isAdmin = (user as any)?.admin === true || (user as any)?.isAdmin === true;

// Fetch tournament (without participant details by default)
const tournament = await db.query.TournamentsTable.findFirst({
  where: eq(TournamentsTable.id, tournamentId),
  with: {
    matches: true,
    creator: true,
  },
});

if (!tournament) {
  return Astro.redirect("/404");
}

// Decide si mostrar participantes públicamente (default: true)
const showParticipants = (tournament.config as any)?.showParticipants ?? true;

let participants: any[] = [];
let currentParticipants = 0;
let isJoined = false;

if (showParticipants || isAdmin) {
  participants = await db.query.TournamentParticipantsTable.findMany({
    where: eq(TournamentParticipantsTable.tournamentId, tournamentId),
    with: { user: true },
  });
  currentParticipants = participants.length;
  if (user) isJoined = participants.some((p) => p.userId === Number(user.id));
} else {
  // Only fetch counts / joined flag (do NOT fetch participant details)
  const countRes = await db
    .select({ count: count() })
    .from(TournamentParticipantsTable)
    .where(eq(TournamentParticipantsTable.tournamentId, tournamentId));
  currentParticipants = countRes[0].count;

  if (user) {
    const existing = await db.query.TournamentParticipantsTable.findFirst({
      where: and(
        eq(TournamentParticipantsTable.tournamentId, tournamentId),
        eq(TournamentParticipantsTable.userId, Number(user.id))
      ),
    });
    isJoined = !!existing;
  }
}

// Attach participants only when allowed
const participantsList: any[] = participants;
const maxParticipants = tournament.maxParticipants || Infinity;

// Permisos
const canJoin = user && !!user.discordId && !isJoined && tournament.status === "registration" && currentParticipants < maxParticipants;

// Solo ADMINS pueden iniciar el torneo
const canStart = isAdmin && tournament.status === "registration" && currentParticipants >= 2;

const isFull = currentParticipants >= maxParticipants;

// Formateo de fechas
const startDate = new Date(tournament.createdAt).toLocaleDateString("es-UY", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Layout title={`${tournament.name} | Torneos`}>
  {/* Fondo Ambiental */}
  <div class="fixed inset-0 -z-10 bg-[#050505]">
    <div
      class="absolute inset-0 bg-[url('/images/pattern-grid.svg')] opacity-[0.03]"
    >
    </div>
    {/* Glow dinámico basado en el estado */}
    <div
      class={`absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] blur-[120px] opacity-20 pointer-events-none ${
        tournament.status === "in_progress"
          ? "bg-blue-600"
          : tournament.status === "completed"
            ? "bg-yellow-500"
            : "bg-green-500"
      }`}
    >
    </div>
  </div>

  <div class="container mx-auto px-4 py-8 mt-10 relative z-10">
    {/* --- HERO SECTION --- */}
    <div
      class="relative rounded-3xl overflow-hidden mb-10 border border-white/10 bg-[#1a1b1e] shadow-2xl"
    >
      {/* Banner de Fondo con Blur */}
      <div class="absolute inset-0">
        {
          tournament.bannerUrl ? (
            <img
              src={tournament.bannerUrl}
              alt=""
              class="w-full h-full object-cover opacity-40 blur-sm scale-105"
            />
          ) : (
            <div class="w-full h-full bg-gradient-to-br from-violet-900 to-black opacity-50" />
          )
        }
        <div
          class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a]/60 to-transparent"
        >
        </div>
      </div>

      <div
        class="relative p-8 md:p-12 flex flex-col md:flex-row gap-8 items-end"
      >
        {/* Imagen Principal (Thumbnail) */}
        <div
          class="hidden md:block w-48 h-48 shrink-0 rounded-2xl overflow-hidden border-4 border-white/10 shadow-2xl bg-black"
        >
          <img
            src={tournament.bannerUrl || "/images/tournament-placeholder.webp"}
            alt={tournament.name}
            class="w-full h-full object-cover"
          />
        </div>

        {/* Info Text */}
        <div class="flex-1 space-y-4">
          <div class="flex flex-wrap items-center gap-3">
            {/* Badge de Estado */}
            <div
              class={`
                        inline-flex items-center gap-2 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide border backdrop-blur-md
                        ${tournament.status === "registration" ? "bg-green-500/20 text-green-400 border-green-500/30" : ""}
                        ${tournament.status === "in_progress" ? "bg-blue-500/20 text-blue-400 border-blue-500/30 animate-pulse" : ""}
                        ${tournament.status === "completed" ? "bg-yellow-500/20 text-yellow-400 border-yellow-500/30" : ""}
                    `}
            >
              {
                tournament.status === "registration" && (
                  <span class="size-2 rounded-full bg-green-500 animate-ping" />
                )
              }
              {
                tournament.status === "registration"
                  ? "Inscripciones Abiertas"
                  : tournament.status === "in_progress"
                    ? "En Curso"
                    : "Finalizado"
              }
            </div>

            <span
              class="text-white/60 text-sm font-rubik flex items-center gap-1.5 bg-black/30 px-3 py-1 rounded-full border border-white/5"
            >
              <LucideCalendar size={14} />
              {startDate}
            </span>
          </div>

          <h1
            class="text-4xl md:text-6xl font-anton text-white uppercase tracking-wide leading-none drop-shadow-lg"
          >
            {tournament.name}
          </h1>

          <p
            class="text-white/70 text-lg font-rubik max-w-2xl leading-relaxed whitespace-pre-wrap"
          >
            {tournament.description}
          </p>
        </div>

        {/* Action Buttons */}
        <div class="flex flex-col sm:flex-row gap-4 w-full md:w-auto">
          {
            canJoin && (
              <button
                id="join-btn"
                data-id={tournament.id}
                class="group relative flex items-center justify-center gap-3 px-8 py-4 bg-green-600 hover:bg-green-500 text-white font-bold rounded-xl transition-all shadow-[0_0_20px_rgba(22,163,74,0.3)] hover:shadow-[0_0_30px_rgba(22,163,74,0.5)] hover:-translate-y-1"
              >
                <LucideUserPlus size={20} />
                <span>Inscribirse Ahora</span>
              </button>
            )
          }

          {
            user && !user.discordId && tournament.status === "registration" && (
              <button
                onclick="window.location.href='/api/discord/link'"
                class="group relative flex items-center justify-center gap-3 px-8 py-4 bg-violet-600 hover:bg-violet-500 text-white font-bold rounded-xl transition-all shadow-[0_0_20px_rgba(124,58,237,0.3)] hover:shadow-[0_0_30px_rgba(124,58,237,0.5)]"
              >
                <LucideUserPlus size={20} />
                <span>Vincular Discord para inscribirte</span>
              </button>
            )
          }

          {
            !user && tournament.status === "registration" && (
              <button
                onclick="document.getElementById('login-modal').showModal()"
                class="group relative flex items-center justify-center gap-3 px-8 py-4 bg-violet-600 hover:bg-violet-500 text-white font-bold rounded-xl transition-all shadow-[0_0_20px_rgba(124,58,237,0.3)] hover:shadow-[0_0_30px_rgba(124,58,237,0.5)] hover:-translate-y-1"
              >
                <LucideUserPlus size={20} />
                <span>Inicia Sesión para Inscribirte</span>
              </button>
            )
          }

          {
            isJoined && tournament.status === "registration" && (
              <div class="flex items-center justify-center gap-3 px-8 py-4 bg-white/5 border border-white/10 text-white/50 font-bold rounded-xl cursor-not-allowed">
                <LucideTrophy size={20} /> Estás Inscrito
              </div>
            )
          }

          {
            isFull && !isJoined && tournament.status === "registration" && (
              <div class="flex items-center justify-center gap-3 px-8 py-4 bg-red-500/10 border border-red-500/20 text-red-400 font-bold rounded-xl">
                Cupos Llenos
              </div>
            )
          }
        </div>
      </div>
    </div>

    {/* --- ADMIN PANEL (Solo Visible para Admins) --- */}
    {
      isAdmin && (
        <div class="mb-10 p-6 rounded-2xl bg-red-950/10 border border-red-500/20 border-dashed relative overflow-hidden group">
          <div class="absolute inset-0 bg-[url('/images/pattern-grid.svg')] opacity-5 pointer-events-none" />
          <div class="flex flex-col md:flex-row items-center justify-between gap-6 relative z-10">
            <div class="flex items-center gap-4">
              <div class="p-3 bg-red-500/20 rounded-xl text-red-400">
                <LucideShieldAlert size={24} />
              </div>
              <div>
                <h3 class="text-white font-bold text-lg flex items-center gap-2">
                  Panel de Administración{" "}
                  <span class="text-[10px] bg-red-500 text-white px-2 py-0.5 rounded uppercase">
                    Admin Only
                  </span>
                </h3>
                <p class="text-white/50 text-sm">
                  Gestiona el estado y configuración del torneo.
                </p>
              </div>
            </div>

            <div class="flex gap-3">
              {canStart && (
                <button
                  id="start-btn"
                  data-id={tournament.id}
                  class="flex items-center gap-2 px-6 py-2.5 bg-white text-black hover:bg-gray-200 font-bold rounded-lg transition-colors shadow-lg"
                >
                  <LucidePlay size={18} fill="currentColor" /> Iniciar Torneo
                </button>
              )}
              <a
                href={`/admin/torneos/${tournament.id}`}
                class="flex items-center gap-2 px-6 py-2.5 bg-white/5 hover:bg-white/10 text-white border border-white/10 font-bold rounded-lg transition-colors"
              >
                <LucideSettings size={18} /> Gestionar
              </a>
            </div>
          </div>
        </div>
      )
    }

    {/* --- LAYOUT GRID --- */}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {/* COLUMNA PRINCIPAL (Bracket) */}
      <div class="lg:col-span-2 space-y-8">
        {
          tournament.status === "in_progress" ||
          tournament.status === "completed" ? (
            <div class="bg-[#0f0f11] border border-white/10 rounded-2xl overflow-hidden shadow-xl">
              <div class="p-6 border-b border-white/5 bg-white/[0.02] flex justify-between items-center">
                <h2 class="text-xl font-anton text-white uppercase tracking-wide flex items-center gap-2">
                  <LucideSwords className="text-yellow-500" /> Bracket Oficial
                </h2>
                <span class="text-xs font-mono text-white/30">
                  ID: {tournament.id}
                </span>
              </div>
              <div class="p-6 overflow-x-auto custom-scrollbar">
                <TournamentBracket
                  client:visible
                  matches={tournament.matches as any}
                  participants={participantsList as any}
                  currentUserId={user ? Number(user.id) : undefined}
                  isCreator={isAdmin}
                />
              </div>
            </div>
          ) : (
            <div class="flex flex-col items-center justify-center bg-[#0f0f11] border border-white/10 border-dashed rounded-2xl p-16 text-center">
              <div class="p-6 bg-white/5 rounded-full mb-6 text-white/20">
                <LucideTrophy size={48} />
              </div>
              <h3 class="text-2xl font-anton text-white uppercase tracking-wide mb-2">
                Próximamente
              </h3>
              <p class="text-white/50 max-w-md mx-auto">
                El bracket se generará automáticamente una vez que un
                administrador inicie el torneo. Prepárate.
              </p>
            </div>
          )
        }
      </div>

      {/* SIDEBAR (Info & Participantes) */}
      <div class="space-y-6">
        {/* Lista de Participantes */}
        <div
          class="bg-[#0f0f11] border border-white/10 rounded-2xl p-6 shadow-xl"
        >
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-bold text-white flex items-center gap-2">
              <LucideUsers size={18} className="text-violet-400" /> Participantes
            </h3>
            <span
              class={`text-xs font-bold px-2 py-1 rounded border ${isFull ? "bg-red-500/10 text-red-400 border-red-500/20" : "bg-white/5 text-white/60 border-white/10"}`}
            >
              {currentParticipants} / {
                maxParticipants === Infinity ? "∞" : maxParticipants
              }
            </span>
          </div>

          <div
            class="space-y-3 max-h-[400px] overflow-y-auto pr-2 custom-scrollbar"
          >
            {
              (!showParticipants && !isAdmin) ? (
                <div class="space-y-3">
                  {Array.from({ length: Math.min(6, Math.max(3, currentParticipants || 3)) }).map(() => (
                    <div class="flex items-center gap-3 p-3 rounded-xl bg-white/5 border border-white/5 transition-colors filter blur-sm opacity-60">
                      <div class="w-10 h-10 rounded-lg bg-white/10" />
                      <div class="flex-1 min-w-0">
                        <div class="h-3 bg-white/10 rounded mb-2 w-1/2"></div>
                        <div class="h-3 bg-white/10 rounded w-1/4"></div>
                      </div>
                      <LucideLock className="text-gray-400" />
                    </div>
                  ))}

                  <div class="text-center text-xs text-gray-400 mt-3 flex items-center justify-center gap-2">
                    <LucideLock className="w-4 h-4" />
                    <span>La lista de participantes está privada</span>
                  </div>
                </div>
              ) : (
                participantsList.length > 0 ? (
                  participantsList.map((p: any) => (
                    <div class="flex items-center gap-3 p-3 rounded-xl bg-white/5 border border-white/5 hover:border-white/20 transition-colors">
                      <img
                        src={
                          p.user?.avatar ||
                          `https://ui-avatars.com/api/?name=${p.user?.username}`
                        }
                        alt={p.user?.username}
                        class="size-10 rounded-lg object-cover bg-black"
                      />
                      <div class="overflow-hidden">
                        <p class="text-white font-bold text-sm truncate">
                          {p.user?.displayName || p.user?.username}
                          {p.user?.discordId && (
                            <a
                              href={`https://discord.com/users/${p.user.discordId}`}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="ml-2 inline-flex items-center text-xs text-gray-400 hover:text-white"
                              title="Ver en Discord"
                            >
                              <LucideExternalLink className="w-3.5 h-3.5" />
                            </a>
                          )}
                        </p>
                        <p class="text-xs text-white/40 truncate">
                          @{p.user?.username}
                        </p>
                      </div>
                    </div>
                  ))
                ) : (
                  <div class="text-center py-8 text-white/30 text-sm italic">
                    Sé el primero en inscribirte.
                  </div>
                )
              )
            }
          </div>
        </div>

        {/* Detalles Técnicos */}
        <div class="bg-[#0f0f11] border border-white/10 rounded-2xl p-6">
          <h3 class="text-lg font-bold text-white mb-4">Detalles del Evento</h3>
          <ul class="space-y-4">
            <li
              class="flex justify-between items-center text-sm border-b border-white/5 pb-3"
            >
              <span class="text-white/50">Formato</span>
              <span
                class="text-white font-mono uppercase bg-white/5 px-2 py-0.5 rounded"
              >
                {tournament.format.replace("_", " ")}
              </span>
            </li>
            <li
              class="flex justify-between items-center text-sm border-b border-white/5 pb-3"
            >
              <span class="text-white/50">Organizador</span>
              <span class="text-white font-bold flex items-center gap-2">
                {tournament.creator.displayName}
                {
                  tournament.creator.admin === true && (
                    <LucideShieldAlert size={12} class="text-red-500" />
                  )
                }
              </span>
            </li>
            <li class="flex justify-between items-center text-sm">
              <span class="text-white/50">Visibilidad</span>
              <span class="text-white capitalize flex items-center gap-2">
                <span
                  class={`size-2 rounded-full ${tournament.privacy === "public" ? "bg-green-500" : "bg-red-500"}`}
                ></span>
                {tournament.privacy}
              </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { actions } from "astro:actions";
  import { navigate } from "astro:transitions/client";
  import { toast } from "sonner";

  const joinBtn = document.getElementById("join-btn");
  const startBtn = document.getElementById("start-btn");

  // Handler para unirse
  if (joinBtn) {
    joinBtn.addEventListener("click", async () => {
      const id = parseInt(joinBtn.dataset.id!);

      // Estado de carga visual
      const originalContent = joinBtn.innerHTML;
      joinBtn.setAttribute("disabled", "true");
      joinBtn.innerHTML = `<span class="animate-spin inline-block mr-2">⏳</span> Procesando...`;
      joinBtn.classList.add("opacity-70", "cursor-not-allowed");

      try {
        const { error } = await actions.tournaments.join({ tournamentId: id });
        if (error) throw new Error(error.message);

        toast.success("¡Te has inscrito correctamente!");
        setTimeout(() => location.reload(), 1000);
      } catch (err: any) {
        toast.error(err.message);
        // Revertir estado
        joinBtn.removeAttribute("disabled");
        joinBtn.innerHTML = originalContent;
        joinBtn.classList.remove("opacity-70", "cursor-not-allowed");
      }
    });
  }

  // Handler para iniciar (Admin)
  if (startBtn) {
    startBtn.addEventListener("click", async () => {
      const id = parseInt(startBtn.dataset.id!);

      if (
        !confirm(
          "⚠️ ¿Iniciar torneo?\n\nSe cerrarán las inscripciones y se generará el bracket automáticamente. Esta acción no se puede deshacer.",
        )
      )
        return;

      const originalContent = startBtn.innerHTML;
      startBtn.setAttribute("disabled", "true");
      startBtn.innerHTML = `Iniciando...`;

      try {
        const { error } = await actions.tournaments.start({ tournamentId: id });
        if (error) throw new Error(error.message);

        toast.success("Torneo iniciado con éxito");
        setTimeout(() => location.reload(), 1000);
      } catch (err: any) {
        toast.error(err.message);
        startBtn.removeAttribute("disabled");
        startBtn.innerHTML = originalContent;
      }
    });
  }
</script>

<style>
  /* Scrollbar fina y elegante */
  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: transparent;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.2);
  }
</style>
