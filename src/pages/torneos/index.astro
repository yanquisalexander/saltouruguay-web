---
import Layout from "@/layouts/Layout.astro";
import TournamentList from "@/components/tournaments/TournamentList";
import TournamentAdminControls from "@/components/tournaments/TournamentAdminControls";
import { client as db } from "@/db/client";
import { TournamentsTable } from "@/db/schema";
import { desc } from "drizzle-orm";
import { getSession } from "auth-astro/server";
import { LucideTrophy, LucideSwords, LucideUsers } from "lucide-preact";

const session = await getSession(Astro.request);
const user = session?.user;
const isAdmin = user?.isAdmin === true;

const tournamentsData = await db.query.TournamentsTable.findMany({
  where: isAdmin ? undefined : (t, { ne }) => ne(t.status, "draft"),
  orderBy: [desc(TournamentsTable.createdAt)],
  with: { participants: true },
});

let totalPlayers = 0;
let activeTournaments = 0;

const tournaments = tournamentsData.map((t) => {
  const count = t.participants.length;
  totalPlayers += count;
  if (t.status === "registration" || t.status === "in_progress")
    activeTournaments++;

  return {
    ...t,
    participantsCount: count,
    currentUserJoined: user
      ? t.participants.some((p) => p.userId === Number(user.id))
      : false,
    participants: undefined,
  };
});

const getTeamLogoPath = (teamName: string) => {
  const normalized = teamName
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .replace(/\s+/g, "-");

  return `/images/team-logos/${normalized}.webp`;
};

const featuredTeamsTournament = await db.query.TournamentsTable.findFirst({
  where: (t, { eq }) => eq(t.showTeamsFeatured, true),
  with: {
    participants: {
      with: { user: true },
    },
  },
});

const teamsByName = new Map<string, any[]>();
if (featuredTeamsTournament) {
  for (const participant of featuredTeamsTournament.participants) {
    if (!participant.teamName) continue;

    if (!teamsByName.has(participant.teamName)) {
      teamsByName.set(participant.teamName, []);
    }
    teamsByName.get(participant.teamName)!.push({
      id: participant.user.id,
      displayName: participant.user.displayName,
      username: participant.user.username,
      avatar: participant.user.avatar,
    });
  }
}

const featuredTeams = Array.from(teamsByName.entries())
  .map(([name, players]) => ({ name, players }))
  .sort((a, b) => a.name.localeCompare(b.name));
---

<Layout title="Torneos | Salto Uruguay" description="Compite en los torneos oficiales de la comunidad.">

  <div class="container mx-auto px-4 py-8 mt-20 min-h-screen flex flex-col">

    <main class="mb-12">
      {tournaments.length > 0 ? (
        <TournamentList client:load tournaments={tournaments as any}/>
      ) : (
        <div class="text-center text-white/50 py-20">No hay torneos activos</div>
      )}
    </main>

    {featuredTeamsTournament && featuredTeams.length > 0 && (
      <section class="mb-14">
        <div class="mb-6">
          <h2 class="text-2xl md:text-3xl font-anton text-white">
            {featuredTeamsTournament.name} - Equipos Confirmados
          </h2>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
          {featuredTeams.map((team) => (
            <div class="flex items-center rounded-full border border-white/10 bg-white/[0.02] px-4 py-3 h-[96px] hover:border-violet-400/40 hover:bg-white/[0.04] transition-all">

              <!-- Logo + nombre -->
              <div class="flex items-center gap-3 flex-1">
                <div class="w-16 h-16 rounded-full overflow-hidden border border-white/10 flex-shrink-0 bg-black/40 relative">
                  <img
                    src={getTeamLogoPath(team.name)}
                    alt={`Escudo ${team.name}`}
                    class="w-full h-full object-cover"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                  />
                  <div class="absolute inset-0 hidden items-center justify-center bg-gradient-to-br from-violet-500 to-fuchsia-600">
                    <LucideUsers size={16} class="text-white"/>
                  </div>
                </div>

                <h3 class="text-white font-semibold text-xl leading-tight">
                  {team.name}
                </h3>
              </div>

              <!-- Jugadores -->
              <div class="flex flex-col justify-between items-end shrink-0 ml-2 w-[115px] h-[88px]">

                <!-- Titular 1 -->
                <div class="text-right">
                  {team.players[0] && (
                    <>
                      <div class="text-orange-400 text-xs font-semibold leading-none">
                        {team.players[0].displayName}
                      </div>
                      <div class="text-white/40 text-[10px] leading-none">
                        @{team.players[0].username}
                      </div>
                    </>
                  )}
                </div>

                <!-- Titular 2 -->
                <div class="text-right">
                  {team.players[1] && (
                    <>
                      <div class="text-orange-400 text-xs font-semibold leading-none">
                        {team.players[1].displayName}
                      </div>
                      <div class="text-white/40 text-[10px] leading-none">
                        @{team.players[1].username}
                      </div>
                    </>
                  )}
                </div>

                <!-- Suplentes -->
                <div class="border-t border-white/10 pt-1 text-right">
                  {team.players[2] && (
                    <div class="text-white/50 text-[9px] leading-none">
                      {team.players[2].displayName}
                    </div>
                  )}
                  {team.players[3] && (
                    <div class="text-white/40 text-[9px] leading-none">
                      {team.players[3].displayName}
                    </div>
                  )}
                </div>

              </div>

            </div>
          ))}
        </div>
      </section>
    )}

  </div>
</Layout>
