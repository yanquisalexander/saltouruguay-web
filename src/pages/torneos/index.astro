---
import Layout from "@/layouts/Layout.astro";
import TournamentList from "@/components/tournaments/TournamentList";
import TournamentAdminControls from "@/components/tournaments/TournamentAdminControls";
import { client as db } from "@/db/client";
import { TournamentsTable } from "@/db/schema";
import { desc } from "drizzle-orm";
import { getSession } from "auth-astro/server";
import { LucideTrophy, LucideSwords, LucideUsers } from "lucide-preact";

const session = await getSession(Astro.request);
const user = session?.user;
const isAdmin = user?.isAdmin === true;

const tournamentsData = await db.query.TournamentsTable.findMany({
  where: isAdmin ? undefined : (t, { ne }) => ne(t.status, "draft"),
  orderBy: [desc(TournamentsTable.createdAt)],
  with: { participants: true },
});

let totalPlayers = 0;
let activeTournaments = 0;

const tournaments = tournamentsData.map((t) => {
  const count = t.participants.length;
  totalPlayers += count;
  if (t.status === "registration" || t.status === "in_progress")
    activeTournaments++;

  return {
    ...t,
    participantsCount: count,
    currentUserJoined: user
      ? t.participants.some((p) => p.userId === Number(user.id))
      : false,
    participants: undefined,
  };
});

// Obtener torneo con equipos destacados
const featuredTeamsTournament = await db.query.TournamentsTable.findFirst({
  where: (t, { eq }) => eq(t.showTeamsFeatured, true),
  with: {
    participants: {
      with: {
        user: true,
      },
    },
  },
});

// Agrupar participantes por equipo (excluir jugadores sin equipo)
const teamsByName = new Map<string, any[]>();
if (featuredTeamsTournament) {
  for (const participant of featuredTeamsTournament.participants) {
    // Excluir participantes sin equipo asignado
    if (!participant.teamName) continue;

    if (!teamsByName.has(participant.teamName)) {
      teamsByName.set(participant.teamName, []);
    }
    teamsByName.get(participant.teamName)!.push({
      id: participant.user.id,
      displayName: participant.user.displayName,
      username: participant.user.username,
      avatar: participant.user.avatar,
    });
  }
}

const featuredTeams = Array.from(teamsByName.entries())
  .map(([name, players]) => ({ name, players }))
  .sort((a, b) => a.name.localeCompare(b.name));
---

<Layout
  title="Torneos | Salto Uruguay"
  description="Compite en los torneos oficiales de la comunidad."
>
  {/* Fondo */}
  <div class="fixed inset-0 -z-10 bg-[#050505]">
    <div
      class="absolute inset-0 bg-[url('/images/pattern-grid.svg')] opacity-[0.03]"
    >
    </div>
    <div
      class="absolute top-0 right-0 w-[500px] h-[500px] bg-violet-900/10 blur-[150px] rounded-full"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-900/10 blur-[150px] rounded-full"
    >
    </div>
  </div>

  {/* CONTENEDOR FLEX para empujar sponsors al fondo */}
  <div class="container mx-auto px-4 py-8 mt-20 min-h-screen flex flex-col">
    <div class="flex-1">
      {/* HEADER */}
      <header class="relative mb-12">
        <div class="flex flex-col md:flex-row justify-between items-end gap-6">
          <div class="flex-1">
            <div
              class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-violet-500/10 border border-violet-500/20 text-violet-400 text-xs font-bold uppercase tracking-widest mb-4"
            >
              <LucideTrophy size={14} /> Competitivo Oficial
            </div>

            <h1
              class="text-5xl md:text-7xl font-anton text-white uppercase tracking-tight mb-4"
            >
              Zona de <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-violet-400 to-fuchsia-500"
                >Torneos</span
              >
            </h1>

            <p class="text-white/60 text-lg max-w-xl">
              Demuestra tu habilidad, escala en el ranking y gana premios
              exclusivos.
            </p>

            <div class="flex gap-6 mt-8">
              <div class="flex items-center gap-3">
                <LucideSwords size={20} />
                <span class="text-2xl text-white">{activeTournaments}</span>
              </div>
              <div class="flex items-center gap-3">
                <LucideUsers size={20} />
                <span class="text-2xl text-white">{totalPlayers}</span>
              </div>
            </div>
          </div>

          {
            isAdmin && (
              <div class="shrink-0">
                <TournamentAdminControls client:visible />
              </div>
            )
          }
        </div>
      </header>

      {/* LISTA TORNEOS */}
      <main class="mb-12">
        {
          tournaments.length > 0 ? (
            <TournamentList client:load tournaments={tournaments as any} />
          ) : (
            <div class="text-center text-white/50 py-20">
              No hay torneos activos
            </div>
          )
        }
      </main>

      {/* EQUIPOS */}
{
  featuredTeamsTournament && featuredTeams.length > 0 && (
    <section class="mb-12">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-2xl md:text-3xl font-anton text-white">
          {featuredTeamsTournament.name} - Equipos Confirmados
        </h2>
      </div>

      <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {featuredTeams.map((team) => (
          <div class="rounded-lg border border-white/10 bg-white/[0.02] p-3 hover:border-white/20 transition-all group">
            
            <div class="flex items-center gap-2 mb-3 pb-2 border-b border-white/10">
              <div class="w-7 h-7 rounded-md bg-gradient-to-br from-violet-500 to-fuchsia-600 flex items-center justify-center">
                <LucideUsers size={14} class="text-white" />
              </div>
              <h3 class="text-white font-semibold text-sm truncate group-hover:text-violet-400">
                {team.name}
              </h3>
            </div>

            <div class="space-y-1.5">
              {team.players.map((player) => (
                <div class="flex items-center gap-2 p-1.5 rounded-md hover:bg-white/5">
                  <img
                    src={
                      player.avatar ||
                      `https://api.dicebear.com/7.x/avataaars/svg?seed=${player.username}`
                    }
                    alt={player.displayName}
                    class="w-7 h-7 rounded-full border border-white/10"
                  />
                  <div class="flex-1 min-w-0">
                    <div class="text-white text-xs font-medium truncate">
                      {player.displayName}
                    </div>
                    <div class="text-white/40 text-[11px] truncate">
                      @{player.username}
                    </div>
                  </div>
                </div>
              ))}
            </div>

            <div class="mt-2 pt-2 border-t border-white/10 flex items-center justify-between text-[11px]">
              <span class="text-white/50">Jugadores</span>
              <span class="px-2 py-0.5 bg-white/5 rounded-full text-white font-medium">
                {team.players.length}
              </span>
            </div>

          </div>
        ))}
      </div>
    </section>
  )
}

      {/* DIAGRAMA */}
      <section class="tournament-diagram mb-20">
        <h2 class="diagram-title">ðŸ“Š Formato de Competencia</h2>
        <div class="diagram-wrapper">
          <img src="/images/Diagrama.webp" alt="Diagrama del torneo" />
        </div>
      </section>
    </div>

    {/* ===== AUSPICIANTES SIEMPRE AL FINAL ===== */}
    <section class="mb-10">
      <h2
        class="text-2xl md:text-3xl font-anton text-white uppercase tracking-wide mb-8"
      >
        HACEN POSIBLE ESTE TORNEO
      </h2>

      <div class="flex flex-wrap gap-8">
        <div
          class="w-40 h-40 md:w-52 md:h-52 rounded-2xl border border-white/10 bg-white/[0.03] flex items-center justify-center"
        >
          <img
            src="/images/zona.webp"
            class="max-w-[85%] max-h-[85%] object-contain"
          />
        </div>

        <div
          class="w-40 h-40 md:w-52 md:h-52 rounded-2xl border border-white/10 bg-white/[0.03] flex items-center justify-center"
        >
          <img
            src="/images/golen.webp"
            class="max-w-[85%] max-h-[85%] object-contain"
          />
        </div>
      </div>
    </section>
  </div>
</Layout>

