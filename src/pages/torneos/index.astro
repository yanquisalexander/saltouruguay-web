---
import Layout from "@/layouts/Layout.astro";
import TournamentList from "@/components/tournaments/TournamentList";
import TournamentAdminControls from "@/components/tournaments/TournamentAdminControls";
import { client as db } from "@/db/client";
import { TournamentsTable } from "@/db/schema";
import { desc } from "drizzle-orm";
import { getSession } from "auth-astro/server";
import { LucideTrophy, LucideSwords, LucideUsers } from "lucide-preact";

const session = await getSession(Astro.request);
const user = session?.user;
const isAdmin = user?.isAdmin === true;

const tournamentsData = await db.query.TournamentsTable.findMany({
  where: isAdmin ? undefined : (t, { ne }) => ne(t.status, "draft"),
  orderBy: [desc(TournamentsTable.createdAt)],
  with: { participants: true },
});

let totalPlayers = 0;
let activeTournaments = 0;

const tournaments = tournamentsData.map((t) => {
  const count = t.participants.length;
  totalPlayers += count;
  if (t.status === "registration" || t.status === "in_progress")
    activeTournaments++;

  return {
    ...t,
    participantsCount: count,
    currentUserJoined: user
      ? t.participants.some((p) => p.userId === Number(user.id))
      : false,
    participants: undefined,
  };
});

const getTeamLogoPath = (teamName: string) => {
  const normalized = teamName
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .replace(/\s+/g, "-");

  return `/images/team-logos/${normalized}.webp`;
};

const featuredTeamsTournament = await db.query.TournamentsTable.findFirst({
  where: (t, { eq }) => eq(t.showTeamsFeatured, true),
  with: {
    participants: {
      with: { user: true },
    },
  },
});

const teamsByName = new Map<string, any[]>();
if (featuredTeamsTournament) {
  for (const participant of featuredTeamsTournament.participants) {
    if (!participant.teamName) continue;

    if (!teamsByName.has(participant.teamName)) {
      teamsByName.set(participant.teamName, []);
    }
    teamsByName.get(participant.teamName)!.push({
      id: participant.user.id,
      displayName: participant.user.displayName,
      username: participant.user.username,
      avatar: participant.user.avatar,
    });
  }
}

const featuredTeams = Array.from(teamsByName.entries())
  .map(([name, players]) => ({ name, players }))
  .sort((a, b) => a.name.localeCompare(b.name));

// number of starting players on the roster; the rest are considered substitutes
const TITULARES_COUNT = 2;

// split each team into titulares and suplentes rather than relying on numeric indexes
const featuredTeamsWithRoles = featuredTeams.map((team) => {
  const titulares = team.players.slice(0, TITULARES_COUNT);
  const suplentes = team.players.slice(TITULARES_COUNT);
  return { ...team, titulares, suplentes };
});
---

<Layout
  title="Torneos"
  description="Compite en los torneos oficiales de la comunidad."
>
  <div class="fixed inset-0 -z-10 bg-[#050505]">
    <div
      class="absolute inset-0 bg-[url('/images/pattern-grid.svg')] opacity-[0.03]"
    >
    </div>
    <div
      class="absolute top-0 right-0 w-[500px] h-[500px] bg-violet-900/10 blur-[150px] rounded-full"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-900/10 blur-[150px] rounded-full"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 py-8 mt-20 min-h-screen flex flex-col">
    <div class="flex-1">
      <header class="relative mb-12">
        <div class="flex flex-col md:flex-row justify-between items-end gap-6">
          <div class="flex-1">
            <div
              class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-violet-500/10 border border-violet-500/20 text-violet-400 text-xs font-bold uppercase tracking-widest mb-4"
            >
              <LucideTrophy size={14} /> Competitivo Oficial
            </div>

            <h1
              class="text-5xl md:text-7xl font-anton text-white uppercase tracking-tight mb-4"
            >
              Zona de <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-violet-400 to-fuchsia-500"
                >Torneos</span
              >
            </h1>

            <p class="text-white/60 text-lg max-w-xl">
              Demuestra tu habilidad, escala en el ranking y gana premios
              exclusivos.
            </p>

            <div class="flex gap-6 mt-8">
              <div class="flex items-center gap-3">
                <LucideSwords size={20} />
                <span class="text-2xl text-white">{activeTournaments}</span>
              </div>
              <div class="flex items-center gap-3">
                <LucideUsers size={20} />
                <span class="text-2xl text-white">{totalPlayers}</span>
              </div>
            </div>
          </div>

          {
            isAdmin && (
              <div class="shrink-0">
                <TournamentAdminControls client:visible />
              </div>
            )
          }
        </div>
      </header>

      <main class="mb-12">
        {
          tournaments.length > 0 ? (
            <TournamentList client:load tournaments={tournaments as any} />
          ) : (
            <div class="text-center text-white/50 py-20">
              No hay torneos activos
            </div>
          )
        }
      </main>

      {
        featuredTeamsTournament && featuredTeamsWithRoles.length > 0 && (
          <section class="mb-14">
            <div class="mb-6">
              <h2 class="text-2xl md:text-3xl font-anton text-white">
                {featuredTeamsTournament.name} - Equipos Confirmados
              </h2>
            </div>

            <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
              {featuredTeamsWithRoles.map((team) => (
                <div class="flex items-center justify-between rounded-[30px] border border-white/10 bg-white/[0.02] px-4 py-3 h-[96px] hover:border-violet-400/40 hover:bg-white/[0.04] transition-all">
                  <div class="flex items-center gap-3 min-w-0 flex-1">
                    <div class="w-16 h-16 rounded-full overflow-hidden border border-white/10 flex-shrink-0 bg-black/40 relative">
                      <img
                        src={getTeamLogoPath(team.name)}
                        alt={`Escudo ${team.name}`}
                        class="w-full h-full object-cover"
                        onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                      />
                      <div class="absolute inset-0 hidden items-center justify-center bg-gradient-to-br from-violet-500 to-fuchsia-600">
                        <LucideUsers size={16} class="text-white" />
                      </div>
                    </div>

                    <h3 class="text-white font-semibold text-xl truncate">
                      {team.name}
                    </h3>
                  </div>

                  <div class="grid gap-2 text-right min-w-0 flex-shrink-0 grid-rows-[repeat(auto-fit,minmax(22px,1fr))]">
                    {team.titulares.map((p) => (
                      <div class="flex flex-col justify-center text-right">
                        <div class="text-orange-400 text-xs font-semibold leading-none">
                          {p.displayName}
                        </div>
                        <div class="text-white/40 text-[10px] leading-none">
                          @{p.username}
                        </div>
                      </div>
                    ))}

                    {team.suplentes.length > 0 && (
                      <>
                        <div class="w-10 h-px bg-white/10 mb-[2px]" />
                        <div class="h-[12px]">
                          {team.suplentes.map((p) => (
                            <div class="text-white/50 text-[9px] leading-none">
                              {p.displayName}
                            </div>
                          ))}
                        </div>
                      </>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </section>
        )
      }

      <section class="tournament-diagram mb-20">
        <h2 class="diagram-title">TABLA DE POSICIONES</h2>

        <a href="/tabla-posiciones" class="table-preview-link">
          <div class="table-preview">
            <iframe
              src="/tabla-posiciones?isInternalIframe=true"
              loading="lazy"
              title="Tabla de posiciones"></iframe>

            <div class="table-overlay">VER TABLA COMPLETA</div>
          </div>
        </a>
      </section>
    </div>

    <section class="mb-10">
      <h2
        class="text-2xl md:text-3xl font-anton text-white uppercase tracking-wide mb-8"
      >
        HACEN POSIBLE ESTE TORNEO
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div
          class="w-40 h-40 md:w-52 md:h-52 rounded-2xl border border-white/10 bg-white/[0.03] flex items-center justify-center"
        >
          <img
            src="/images/zona.webp"
            class="max-w-[85%] max-h-[85%] object-contain"
          />
        </div>

        <div
          class="w-40 h-40 md:w-52 md:h-52 rounded-2xl border border-white/10 bg-white/[0.03] flex items-center justify-center"
        >
          <img
            src="/images/golen.webp"
            class="max-w-[85%] max-h-[85%] object-contain"
          />
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .tournament-diagram {
    margin-top: 3rem;
  }
  .diagram-title {
    text-align: center;
    font-size: 1.9rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }
  .diagram-wrapper {
    max-width: 600px;
    margin: 0 auto;
  }
  .diagram-wrapper img {
    width: 100%;
    border-radius: 14px;
  }
  .table-preview {
    max-width: 900px;
    margin: 0 auto;
    border-radius: 14px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.02);
  }

  .table-preview iframe {
    width: 100%;
    height: 520px; /* ajusta si quieres m√°s o menos alto */
    border: none;
  }
  .table-preview-link {
    display: block;
    text-decoration: none;
  }

  .table-preview {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    border-radius: 14px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.02);
    transition:
      transform 0.35s ease,
      box-shadow 0.35s ease;
  }

  .table-preview-link:hover .table-preview {
    transform: scale(1.02);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.45);
  }

  .table-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: white;
    background: rgba(0, 0, 0, 0.35);
    backdrop-filter: blur(3px);
    opacity: 0;
    transition: opacity 0.25s ease;
  }

  .table-preview-link:hover .table-overlay {
    opacity: 1;
  }
</style>
