{/* --- EQUIPOS CONFIRMADOS --- */}
<section class="mb-16 relative">

  {/* Glow decorativo */}
  <div class="absolute inset-0 -z-10 flex justify-center">
    <div class="w-[600px] h-[200px] bg-violet-600/10 blur-[120px] rounded-full"></div>
  </div>

  {/* Header */}
  <div class="flex items-center justify-between mb-8">
    <div>
      <h2 class="text-3xl md:text-4xl font-anton text-white uppercase tracking-wide drop-shadow-lg">
        ⚔️ Equipos Confirmados
      </h2>
      <p class="text-white/40 text-sm mt-1 uppercase tracking-wider">
        Torneo Rocket League • Lineup oficial
      </p>
    </div>

    <div class="px-3 py-1 rounded-full bg-violet-500/10 border border-violet-500/20 text-violet-300 text-xs font-bold uppercase tracking-widest">
      11 equipos
    </div>
  </div>

  {/* Grid */}
  <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">

    {[
      "La 141",
      "SS",
      "X-FORCE",
      "La Pasion",
      "Los Espermatogoles",
      "Principes del EH",
      "Que Pelota Gerson",
      "Desertores Cúbicos",
      "Los changos",
      "MATE & TACO",
      "Fuerza Torales"
    ].map((team) => (
      <div class="group relative overflow-hidden rounded-2xl border border-white/10 bg-gradient-to-br from-white/[0.04] to-white/[0.01] p-[1px] hover:scale-[1.03] transition duration-300">

        {/* Glow hover */}
        <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition bg-gradient-to-r from-violet-500/20 via-fuchsia-500/10 to-violet-500/20 blur-xl"></div>

        {/* Card */}
        <div class="relative rounded-2xl bg-[#0b0b0e] p-4 flex items-center gap-3">

          {/* Escudo estilo badge */}
          <div class="w-9 h-9 rounded-xl bg-gradient-to-br from-violet-500 to-fuchsia-600 flex items-center justify-center text-white font-bold text-sm shadow-lg shadow-violet-900/40">
            {team.charAt(0)}
          </div>

          {/* Nombre */}
          <span class="text-white font-semibold tracking-wide group-hover:text-violet-300 transition">
            {team}
          </span>

        </div>
      </div>
    ))}

  </div>
</section>
