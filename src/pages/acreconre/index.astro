---
/* Esta página no depende del servidor, puede prerenderizarse */
export const prerender = true;

import Layout from "@/layouts/Layout.astro";

const COMISION_DIRECTIVA = [
  {
    category: "Presidencia",
    members: [
      {
        name: "Martín Albernaz Milesi",
        role: "Presidente",
      },
    ],
  },
  {
    category: "OTRA CATEGORÍA",
    members: [
      { name: "Julian Martin", role: "Rol" },
      { name: "Nombre Apellido", role: "Rol" },
    ],
  },
  // Puedes agregar más categorías aquí si es necesario
];
---

<Layout title="ACRECONRE">
  <div
    class="min-h-screen flex flex-col items-center justify-center py-20 px-4 relative overflow-hidden"
  >
    {/* Fondo decorativo sutil (opcional, aporta textura) */}
    <div
      class="absolute inset-0 opacity-5 pointer-events-none"
      style="background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0); background-size: 40px 40px;"
    >
    </div>

    {/* --- SECCIÓN HERO (Logo y Estado) --- */}
    <section
      class="flex flex-col items-center text-center max-w-4xl mx-auto z-10"
    >
      {/* Logo con efecto de elevación */}
      <div class="relative group mb-12">
        <div
          class="absolute -inset-10 bg-current opacity-[0.03] blur-3xl rounded-full group-hover:opacity-[0.08] transition-opacity duration-700"
        >
        </div>
        <img
          src="/images/acreconre/acreconre_logo_full.webp"
          draggable="false"
          alt="ACRECONRE Banner"
          class="relative w-full max-w-md md:max-w-lg h-auto drop-shadow-2xl transform transition-transform duration-700 hover:scale-[1.02]"
        />
      </div>

      {/* Título de estado elegante */}
      <div class="space-y-4 mb-16">
        <h1
          class="text-3xl md:text-5xl font-serif font-medium tracking-tight leading-tight"
        >
          Inscripciones <span class="opacity-40 italic">próximamente</span>
        </h1>
        <div class="flex items-center justify-center gap-3 opacity-60">
          <span class="h-[1px] w-12 bg-current"></span>
          <p class="text-xs font-bold uppercase tracking-[0.2em]">
            Sitio Oficial en Construcción
          </p>
          <span class="h-[1px] w-12 bg-current"></span>
        </div>
      </div>
    </section>

    {/* --- SECCIÓN INSTITUCIONAL (Comisión) --- */}
    <section
      class="w-full max-w-2xl z-10 animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-200"
    >
      <div
        class="backdrop-blur-sm bg-white/5 border border-current/10 rounded-2xl p-8 md:p-10 shadow-2xl"
      >
        <h2
          class="text-center text-sm font-bold uppercase tracking-widest opacity-50 mb-8"
        >
          Comisión Directiva
        </h2>

        <div class="space-y-8">
          {
            COMISION_DIRECTIVA.map((group) => (
              <div class="text-center">
                <h3 class="text-lg font-serif italic opacity-80 mb-6 relative inline-block px-4">
                  {group.category}
                  {/* Adorno sutil bajo el título */}
                  <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-1/2 h-[1px] bg-current opacity-20" />
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 justify-center">
                  {group.members.map((member) => (
                    <div class="group relative p-4 rounded-lg hover:bg-current/5 transition-colors duration-300">
                      <p class="text-xl font-medium tracking-wide">
                        {member.name}
                      </p>
                      <p class="text-xs uppercase tracking-wider opacity-60 mt-1 group-hover:opacity-100 transition-opacity">
                        {member.role}
                      </p>
                    </div>
                  ))}
                </div>
              </div>
            ))
          }
        </div>
      </div>

      {/* Footer minimalista */}
      <p
        class="text-center text-[10px] opacity-30 mt-12 uppercase tracking-widest"
      >
        © {new Date().getFullYear()} ACRECONRE. Todos los derechos reservados.
      </p>
    </section>
  </div>
</Layout>
