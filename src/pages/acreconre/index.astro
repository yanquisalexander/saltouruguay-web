---
import Layout from "@/layouts/Layout.astro";

export const prerender = true;

const COMISION_DIRECTIVA = [
  {
    category: "Fundador",
    members: [
      {
        name: "Salto Uruguay",
        role: "Presidente",
      },
    ],
  },
  {
    category: "Comisión Directiva",
    members: [
      { name: "JulianMartinr", role: "Vicepresidente" },
      { name: "TitoLeproso", role: "Secretario" },
      { name: "xDiegouy", role: "Secretario" },
      { name: "TurbanteUy", role: "Prosecretario" },
      { name: "MundoUnoUy", role: "Prosecretario" },
    ],
  },
];
---

<Layout
  title="ACRECONRE | Asociación de Creadores de Contenido de la Región"
  description="Página oficial de ACRECONRE, la Asociación de Creadores de Contenido de la Región. Ya están abiertas las inscripciones para nuevos miembros."
>
  <div
    class="flex flex-col items-center justify-center min-h-[90vh] py-20 px-4 text-center"
  >
    {/* --- BLOQUE 1: TÍTULO Y LOGO --- */}

    <h1
      class="text-4xl md:text-6xl font-black uppercase tracking-tighter leading-none max-w-4xl mb-2"
    >
      Inscripciones Abiertas<br class="hidden md:block" />
      <span class="opacity-40 font-light">Forma parte del equipo!</span>
    </h1>

    <div class="w-24 h-1 bg-current opacity-10 rounded-full my-12"></div>

    <div class="relative w-full max-w-lg group mb-12">
      <div
        class="absolute -inset-10 bg-current opacity-[0.07] blur-3xl rounded-full group-hover:opacity-[0.12] transition-opacity duration-700"
      ></div>
      <img
        src="/images/acreconre/acreconre_logo_full.webp"
        draggable="false"
        alt="ACRECONRE Banner"
        class="relative w-full h-auto drop-shadow-2xl transform transition-transform duration-700 hover:scale-[1.02]"
      />
    </div>

    {/* --- BOTÓN DE INSCRIPCIÓN --- */}
    <div class="mb-20">
      <a 
        href="http://saltouruguayserver.com/acreconre/inscripcion" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-block px-12 py-5 text-sm font-black uppercase tracking-[0.25em] 
               text-white rounded-full
               bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-700
               hover:from-blue-500 hover:via-indigo-500 hover:to-purple-600
               hover:scale-110 hover:shadow-[0_0_30px_rgba(79,70,229,0.5)]
               active:scale-95 transition-all duration-300 ease-out
               border border-white/20 shadow-xl"
      >
        INSCRIBIRME
      </a>
    </div>

    {/* --- BLOQUE 2: COMISIÓN DIRECTIVA --- */}

    <div
      class="w-full max-w-4xl space-y-16 animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-300"
    >
      {
        COMISION_DIRECTIVA.map((group) => (
          <div class="flex flex-col items-center">
            {/* Título de Categoría */}
            <div class="flex items-center w-full max-w-xs gap-4 mb-8 opacity-50">
              <span class="h-[1px] flex-1 bg-current" />
              <h3 class="text-xs font-bold uppercase tracking-[0.2em]">
                {group.category}
              </h3>
              <span class="h-[1px] flex-1 bg-current" />
            </div>

            {/* Grilla de Miembros */}
            <div class="w-full flex flex-col items-center">
              <div class="flex flex-wrap justify-center gap-6 w-full">
                {group.members
                  .filter((m) => m.role !== "Prosecretario")
                  .map((member) => (
                    <div class="group/card flex flex-col items-center justify-center p-6 rounded-2xl border border-current/10 bg-current/[0.01] hover:bg-current/[0.04] hover:border-current/20 transition-all duration-300 min-w-[200px] md:min-w-[240px]">
                      <p class="text-lg md:text-xl font-bold leading-tight tracking-tight">
                        {member.name}
                      </p>
                      <p class="text-xs font-medium opacity-60 mt-1 uppercase tracking-widest">
                        {member.role}
                      </p>
                    </div>
                  ))}
              </div>

              <div class="flex flex-wrap justify-center gap-6 w-full mt-10">
                {group.members
                  .filter((m) => m.role === "Prosecretario")
                  .map((member) => (
                    <div class="group/card flex flex-col items-center justify-center p-6 rounded-2xl border border-current/10 bg-current/[0.01] hover:bg-current/[0.04] hover:border-current/20 transition-all duration-300 min-w-[200px] md:min-w-[240px]">
                      <p class="text-lg md:text-xl font-bold leading-tight tracking-tight">
                        {member.name}
                      </p>
                      <p class="text-xs font-medium opacity-60 mt-1 uppercase tracking-widest">
                        {member.role}
                      </p>
                    </div>
                  ))}
              </div>
            </div>
          </div>
        ))
      }

      <div class="pt-10 opacity-30">
        <p class="text-[10px] font-bold uppercase tracking-[0.15em]">
          Asociación de Creadores de Contenido de la Región
        </p>
      </div>
    </div>
  </div>
</Layout>
