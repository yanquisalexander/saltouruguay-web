---
import Layout from "@/layouts/Layout.astro";
import { getSession } from "auth-astro/server";
import SaltogramFeed from "@/components/saltogram/SaltogramFeed";

const session = await getSession(Astro.request);

if (!session) {
    return Astro.redirect("/");
}
---

<Layout title="Saltogram - Red Social">
    <div class="min-h-screen bg-gradient-to-b from-gray-900 to-black">
        <div class="max-w-4xl mx-auto px-4 py-8">
            <!-- Header -->
            <header class="mb-8">
                <div class="flex items-center justify-between">
                    <div>
                        <h1
                            class="text-4xl font-teko uppercase font-bold text-white tracking-wide mb-2"
                        >
                            <span
                                class="text-transparent bg-clip-text bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500"
                            >
                                Saltogram
                            </span>
                        </h1>
                        <p class="text-white/70 font-rubik">
                            Comparte momentos con la comunidad
                        </p>
                    </div>
                    <div class="flex items-center gap-4">
                        <button
                            id="create-post-btn"
                            class="px-6 py-3 bg-gradient-to-r from-pink-500 to-purple-500 text-white font-bold rounded-lg hover:from-pink-600 hover:to-purple-600 transition-all duration-300 shadow-lg hover:shadow-purple-500/50"
                        >
                            + Nueva Publicaci√≥n
                        </button>
                    </div>
                </div>
            </header>

            <!-- Feed Component -->
            <SaltogramFeed client:load user={session.user} />
        </div>
    </div>
</Layout>
