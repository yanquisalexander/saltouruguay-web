---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Comunidad">
  <div class="flex flex-col max-w-5xl mx-auto min-h-screen mt-16">
    <header
      class="relative z-10 flex flex-col items-center justify-center h-full max-w-4xl mx-auto"
    >
      <div class="flex items-center justify-center gap-x-4">
        <div
          class="relative animate-fade-in-up"
          style="--floating-duration: 5000ms"
        >
          <img
            src="/images/logo_salto.webp"
            alt="SaltoUruguayServer"
            class="size-18 md:size-24 w-auto object-contain aspect-square animate-sink animate-iteration-count-infinite animate-duration-[var(--floating-duration)] saturate-150"
          />
          <img
            src="/images/logo_salto.webp"
            alt="SaltoUruguayServer"
            class="absolute blur-md brightness-125 saturate-200 inset-0 size-18 md:size-24 w-auto object-contain aspect-square z-[-1] animate-sink animate-iteration-count-infinite animate-duration-[var(--floating-duration)]"
          />
        </div>
        <h1
          class="text-3xl animate-fade-in-up animate-delay-150 font-rubik tracking-wider uppercase font-bold text-white mix-blend-screen"
        >
          Comunidad
        </h1>
      </div>

      <h2
        class="text-xl animate-fade-in-up animate-delay-300 font-rubik tracking-wider uppercase font-medium text-white mix-blend-screen my-5 sm:pb-10"
      >
        ¡Te damos la bienvenida a la <span class="text-yellow-400"
          >comunidad Saltana</span
        >!
      </h2>
    </header>

    <span
      class="flex justify-center flex-col items-center mt-8 sm:w-max font-rubik px-2 sm:px-6 uppercase font-medium text-sm text-white/70 mx-auto text-center py-1.5 rounded-full bg-violet-500/20 gap-1 hover:bg-violet-500/30 transition-all duration-300"
    >
      Próximamente más información
    </span>
  </div>
</Layout>
