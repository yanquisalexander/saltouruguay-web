<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Sorteo de Grupos</title>

<style>
  body {
    font-family: "Segoe UI", system-ui, sans-serif;
    background: radial-gradient(circle at top, #0b1220, #020617);
    color: #e5e7eb;
    margin: 0;
    padding: 30px;
  }

  h1 {
    text-align: center;
    font-size: 38px;
    margin-bottom: 20px;
    letter-spacing: 1px;
    background: linear-gradient(90deg, #f59e0b, #fbbf24);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .mainTitle {
    text-align: center;
    font-size: 20px;
    letter-spacing: 4px;
    color: white;
    margin-bottom: 5px;
    font-weight: 700;
  }

  .container {
    max-width: 1100px;
    margin: auto;
  }

  textarea {
    width: 100%;
    height: 120px;
    padding: 14px;
    border-radius: 12px;
    border: 1px solid #1f2937;
    background: #020617;
    color: #e5e7eb;
    margin-bottom: 15px;
    resize: none;
  }

  .controls {
    display: flex;
    gap: 12px;
    margin-bottom: 25px;
    flex-wrap: wrap;
  }

  select, button {
    padding: 12px 18px;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
    transition: 0.2s ease;
    border: 1px solid #1f2937;
    background: #020617;
    color: white;
  }

  button {
    background: linear-gradient(135deg, #f59e0b, #fbbf24);
    color: #111827;
    border: none;
    box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
  }

  button:hover {
    transform: translateY(-2px);
  }

  .groups {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 18px;
  }

  .group {
    background: #020617;
    border: 1px solid #1f2937;
    padding: 18px;
    border-radius: 14px;
    min-height: 230px;
  }

  .group h2 {
    text-align: center;
    color: #fbbf24;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  li {
    background: #020617;
    border: 1px solid #1f2937;
    margin-bottom: 8px;
    padding: 8px 10px;
    border-radius: 8px;
    text-align: center;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  li.drop-animation {
    animation: dropIn 0.6s ease forwards;
    box-shadow: 0 0 15px rgba(251,191,36,0.7);
  }

  @keyframes dropIn {
    0% { transform: translateY(-40px) scale(0.9); opacity: 0; }
    60% { transform: translateY(6px) scale(1.05); opacity: 1; }
    100% { transform: translateY(0) scale(1); }
  }

  .result {
    text-align: center;
    font-size: 28px;
    margin-bottom: 20px;
    font-weight: 700;
    color: #22c55e;
    min-height: 34px;
  }

  #drawOverlay {
    position: fixed;
    inset: 0;
    background: radial-gradient(circle, rgba(2,6,23,0.9), rgba(2,6,23,1));
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  #drawOverlay.show {
    opacity: 1;
    pointer-events: all;
  }

  #drawText {
    font-size: 64px;
    font-weight: 800;
    padding: 20px 40px;
    border-radius: 16px;
    background: linear-gradient(90deg, #f59e0b, #fbbf24);
    color: #020617;
    animation: pulse 1s infinite alternate;
  }

  @keyframes pulse {
    from { transform: scale(1); }
    to { transform: scale(1.08); }
  }

  @media (max-width: 900px) {
    .groups { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 500px) {
    .groups { grid-template-columns: 1fr; }
  }
</style>
</head>

<body>

<div class="container">
  <h2 class="mainTitle">TORNEO ROCKET LEAGUE</h2>
  <h1>Sorteo de Grupos</h1>

  <textarea id="teamList">Equipo 1
Equipo 2
Equipo 3
Equipo 4
Equipo 5
Equipo 6
Equipo 7
Equipo 8</textarea>

  <div class="controls">
    <select id="groupSelect">
      <option value="A">Grupo A</option>
      <option value="B">Grupo B</option>
      <option value="C">Grupo C</option>
      <option value="D">Grupo D</option>
    </select>

    <button onclick="drawTeam()">ðŸŽ² Sortear equipo</button>
    <button onclick="resetDraw()">ðŸ”„ Reiniciar</button>
  </div>

  <div class="result" id="result"></div>

  <div class="groups">
    <div class="group"><h2>Grupo A</h2><ul id="groupA"></ul></div>
    <div class="group"><h2>Grupo B</h2><ul id="groupB"></ul></div>
    <div class="group"><h2>Grupo C</h2><ul id="groupC"></ul></div>
    <div class="group"><h2>Grupo D</h2><ul id="groupD"></ul></div>
  </div>
</div>

<div id="drawOverlay">
  <div id="drawText">SORTEANDO...</div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {

  let remainingTeams = [];
  let drawing = false;

  function loadTeamsIfNeeded() {
    if (remainingTeams.length === 0) {
      remainingTeams = document.getElementById("teamList").value
        .split("\n")
        .map(t => t.trim())
        .filter(t => t !== "");
    }
  }

  window.drawTeam = function () {
    if (drawing) return;
    drawing = true;

    loadTeamsIfNeeded();

    if (remainingTeams.length === 0) {
      alert("No quedan equipos");
      drawing = false;
      return;
    }

    const overlay = document.getElementById("drawOverlay");
    const text = document.getElementById("drawText");
    const group = document.getElementById("groupSelect").value;

    const randomIndex = Math.floor(Math.random() * remainingTeams.length);
    const selectedTeam = remainingTeams[randomIndex];

    const audio = new Audio("https://actions.google.com/sounds/v1/cartoon/wood_plank_flicks.ogg");
    audio.play();

    overlay.classList.add("show");
    text.textContent = "SORTEANDO...";

    setTimeout(() => {
      text.textContent = selectedTeam;
    }, 1500);

    setTimeout(() => {
      remainingTeams.splice(randomIndex, 1);

      const li = document.createElement("li");
      li.textContent = selectedTeam;
      li.classList.add("drop-animation");

      document.getElementById("group" + group).appendChild(li);

      document.getElementById("result").textContent =
        "Equipo sorteado: " + selectedTeam;

      overlay.classList.remove("show");
      drawing = false;
    }, 3000);
  };

  window.resetDraw = function () {
    remainingTeams = [];
    document.getElementById("groupA").innerHTML = "";
    document.getElementById("groupB").innerHTML = "";
    document.getElementById("groupC").innerHTML = "";
    document.getElementById("groupD").innerHTML = "";
    document.getElementById("result").textContent = "";
  };

});
</script>

</body>
</html>
