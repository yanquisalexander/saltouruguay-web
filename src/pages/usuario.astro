---
import PageBreadcrumb from "@/components/PageBreadcrumb.astro";
import { UserAccountLayout } from "@/components/UsersPage/UserAccountLayout";
import Layout from "@/layouts/Layout.astro";
import { getDiscordUser } from "@/services/discord";
import { getSession } from "auth-astro/server";
import {
  LucideExternalLink,
  LucideLogOut,
  LucideShield,
  LucideUser,
  LucideCrown,
} from "lucide-preact";

const session = await getSession(Astro.request);

if (!session) {
  return Astro.redirect("/");
}

const discordUser = session?.user?.discordId
  ? await getDiscordUser(session.user.discordId)
  : null;

// Estilos Glass
const glassPanel =
  "relative overflow-hidden rounded-2xl border border-white/5 bg-[#0a0a0a]/60 backdrop-blur-xl shadow-xl";
---

<Layout title="Mi cuenta">
  {/* Fondo Ambiental */}
  <div class="fixed inset-0 -z-10 bg-[#050505]">
    <div
      class="absolute top-0 right-0 w-[500px] h-[500px] bg-purple-900/10 blur-[120px] rounded-full pointer-events-none"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-900/10 blur-[120px] rounded-full pointer-events-none"
    >
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 py-8 md:py-12 mt-20">
    <PageBreadcrumb
      pathname="/usuario"
      breadcrumbs={[{ text: "Mi cuenta", href: "/usuario" }]}
    />

    <div class="grid gap-8 lg:grid-cols-[320px_1fr] mt-8">
      {/* SIDEBAR: PERFIL CARD */}
      <aside class="flex flex-col gap-6">
        {/* Tarjeta de Identidad */}
        <section
          class={`${glassPanel} p-6 flex flex-col items-center text-center group`}
        >
          <div class="relative mb-4">
            <div
              class="absolute inset-0 bg-gradient-to-tr from-purple-500 to-blue-500 rounded-full blur opacity-40 group-hover:opacity-60 transition-opacity"
            >
            </div>
            <img
              src={session.user.image}
              alt={session.user.name}
              class="relative size-24 rounded-full border-4 border-[#0a0a0a] shadow-2xl object-cover"
            />
            {/* Status Badge */}
            <div
              class="absolute bottom-0 right-0 size-6 bg-green-500 border-4 border-[#0a0a0a] rounded-full"
            >
            </div>
          </div>

          <h2 class="text-2xl font-anton text-white uppercase tracking-wide">
            {session.user.name}
          </h2>
          <p class="text-white/40 font-rubik text-sm mb-6">
            {session.user.email}
          </p>

          <div class="w-full grid grid-cols-2 gap-2 mb-6">
            <div class="bg-white/5 rounded-xl p-3 flex flex-col items-center">
              <span
                class="text-xs text-white/40 uppercase tracking-widest font-bold"
                >Rol</span
              >
              <span class="text-sm font-bold text-white"
                >{session.user.isAdmin ? "Admin" : "Usuario"}</span
              >
            </div>
            <div class="bg-white/5 rounded-xl p-3 flex flex-col items-center">
              <span
                class="text-xs text-white/40 uppercase tracking-widest font-bold"
                >ID</span
              >
              <span
                class="text-sm font-bold text-white font-mono truncate w-full text-center"
                >#{session.user.id}</span
              >
            </div>
          </div>

          <button
            id="account-logout"
            class="w-full flex items-center justify-center gap-2 py-3 rounded-xl bg-red-500/10 text-red-400 hover:bg-red-500 hover:text-white transition-all font-bold text-sm uppercase tracking-wide border border-red-500/20 hover:border-red-500"
          >
            <LucideLogOut size={16} /> Cerrar Sesión
          </button>
        </section>

        {/* Tarjeta de Suscripción */}
        <section
          class={`${glassPanel} p-6 relative overflow-hidden border-yellow-500/20`}
        >
          <div class="absolute top-0 right-0 p-4 opacity-10 text-yellow-500">
            <LucideCrown size={80} />
          </div>

          <h3
            class="font-anton text-xl text-white uppercase mb-4 relative z-10 flex items-center gap-2"
          >
            <LucideCrown size={20} class="text-yellow-500" /> Membresía
          </h3>

          <div class="relative z-10">
            <div class="flex items-center gap-4 mb-4">
              <div
                class="size-12 bg-[#9146FF] rounded-xl overflow-hidden flex items-center justify-center text-white shrink-0 shadow-lg shadow-purple-900/20"
              >
                <img src="/twitch-icon.png" />
              </div>
              <div>
                <span
                  class={`block text-lg font-bold ${session.user.tier ? "text-yellow-400" : "text-white/60"}`}
                >
                  {
                    session.user.tier
                      ? `Tier ${session.user.tier}`
                      : "Sin suscripción"
                  }
                </span>
                <span class="text-xs text-white/40">Twitch Subscriber</span>
              </div>
            </div>

            {
              !session.user.tier && (
                <a
                  href="https://twitch.tv/subs/SaltoUruguayServer"
                  target="_blank"
                  class="block w-full text-center py-2 rounded-lg bg-[#9146FF] hover:bg-[#7c2cf5] text-white font-bold text-sm transition-colors shadow-lg shadow-purple-900/30"
                >
                  Suscribirse Ahora{" "}
                  <LucideExternalLink size={14} class="inline ml-1" />
                </a>
              )
            }
          </div>
        </section>
      </aside>

      {/* PANEL PRINCIPAL */}
      <main class="min-w-0">
        <UserAccountLayout
          session={session}
          discordUser={discordUser}
          client:idle
        />
      </main>
    </div>
  </div>
</Layout>

<script>
  import { signOut } from "auth-astro/client";
  const btn = document.getElementById("account-logout");
  if (btn) {
    btn.addEventListener("click", () => signOut({ callbackUrl: "/" }));
  }
</script>
