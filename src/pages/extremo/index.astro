---
import "@fontsource-variable/playwrite-au-nsw";

import Layout from "@/layouts/Layout.astro";
import { client } from "@/db/client";
import {
  Extremo3PlayersTable,
  SaltoCraftExtremo3InscriptionsTable,
} from "@/db/schema";
import { eq } from "drizzle-orm";

const players = await client
  .select({
    id: Extremo3PlayersTable.id,
    livesCount: Extremo3PlayersTable.livesCount,
    isConfirmedPlayer: Extremo3PlayersTable.isConfirmedPlayer,
    minecraft_username: SaltoCraftExtremo3InscriptionsTable.minecraft_username,
    discordUsername: SaltoCraftExtremo3InscriptionsTable.discordUsername,
  })
  .from(Extremo3PlayersTable)
  .innerJoin(
    SaltoCraftExtremo3InscriptionsTable,
    eq(
      Extremo3PlayersTable.inscriptionId,
      SaltoCraftExtremo3InscriptionsTable.id
    )
  )
  .where(eq(Extremo3PlayersTable.isConfirmedPlayer, true))
  .execute();
---

<Layout title="SaltoCraft Extremo 3 - Jugadores">
  <!-- SVG filter for wavy parchment effect -->
  <svg width="0" height="0" style="position: absolute;">
    <defs>
      <filter id="wavy2">
        <feTurbulence
          baseFrequency="0.02"
          numOctaves="3"
          result="noise"
          seed="1"></feTurbulence>
        <feDisplacementMap in="SourceGraphic" in2="noise" scale="3"
        ></feDisplacementMap>
      </filter>
    </defs>
  </svg>
  <div class="max-w-5xl w-full mx-auto py-8 px-4">
    <h1 class="text-3xl font-bold mb-8 text-center font-anton text-white">
      Jugadores de SaltoCraft Extremo 3
    </h1>

    <!-- Desktop: parchment background with an absolute centered grid so players "fit" inside the scroll area -->
    <div class="hidden md:block">
      <div class="relative w-full max-w-5xl mx-auto">
        <div class="parchment w-full h-fit relative">
          <img
            src="/images/logo-scextremo.webp"
            style="filter: url(#wavy2) grayscale(0.2)"
            class="h-24 mx-auto"
          />

          <h3
            class="font-semibold text-lg text-center font-playwrite text-black"
          >
            Lista de participantes
          </h3>
          <div
            class="grid grid-cols-3 lg:grid-cols-7 gap-2 gap-y-4 place-items-center py-8 px-5"
          >
            {
              players.map((player) => (
                <div class="flex flex-col items-center justify-center text-center">
                  <h3
                    class={`font-semibold text-base font-playwrite player-label ${
                      player.livesCount === 0
                        ? "text-red-500 line-through"
                        : "text-black"
                    }`}
                  >
                    {player.minecraft_username}
                  </h3>
                  <div class="flex items-center gap-1 mt-1">
                    {Array.from({ length: 3 }, (_, i) => (
                      <img
                        src={
                          i < player.livesCount
                            ? "/images/vida.webp"
                            : "/images/calavera.webp"
                        }
                        alt={i < player.livesCount ? "Vida" : "Sin vida"}
                        class="w-4 h-4 object-contain"
                      />
                    ))}
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile: stacked list below the parchment for small screens -->
    <div class="md:hidden grid gap-3 mt-6">
      {
        players.map((player) => (
          <div class="flex items-center justify-between px-4 py-2 bg-[rgba(0,0,0,0.35)] rounded-md">
            <h3
              class={`font-playwrite text-sm player-label ${player.livesCount === 0 ? "text-red-500 line-through" : "text-white"}`}
            >
              {player.minecraft_username}
            </h3>
            <div class="flex items-center gap-1">
              {Array.from({ length: 3 }, (_, i) => (
                <img
                  src={
                    i < player.livesCount
                      ? "/images/vida.webp"
                      : "/images/calavera.webp"
                  }
                  alt={i < player.livesCount ? "Vida" : "Sin vida"}
                  class="w-4 h-4 object-contain"
                />
              ))}
            </div>
          </div>
        ))
      }
    </div>

    {
      players.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-400 font-rubik">
            No hay jugadores confirmados a√∫n.
          </p>
        </div>
      )
    }
  </div>
</Layout>

<style>
  @font-face {
    font-family: Morris;
    src: url(https://cdn.statically.io/gh/EmmesCodes/Tipografias/dae9f5bb/MorrisInitials.ttf);
  }

  .parchment {
    background: tan;
    padding: 12px;
    border: solid calc(0.8vw + 4px) #f9e2c3;
    border-image: url("https://res.cloudinary.com/ez-nettools/image/upload/v1635183100/parchment-hand-painted_zfdfpt.avif");
    border-image-slice: 32 fill;
    border-image-repeat: stretch;
    background-clip: padding-box;
    background-image: url(data:image/png;base64,);
    overflow: hidden;
  }

  .parchment::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: conic-gradient(
      #fff3,
      #fff0 2% 24%,
      #fff2 25%,
      #4321 0,
      #0000 27% 48%,
      #9632 50%,
      #fff2 0,
      #fff0 52% 73%,
      #9632 75%,
      #fff3 0,
      #fff0 78% 97%,
      #9632
    );
  }

  .player-label {
    text-shadow:
      0 1px 0 rgba(255, 255, 255, 0.6),
      0 6px 12px rgba(0, 0, 0, 0.45);
  }
</style>
