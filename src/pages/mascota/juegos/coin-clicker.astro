---
import CoinClickerGame from "@/components/mascota/CoinClickerGame";
import Layout from "@/layouts/Layout.astro";
import { getSession } from "auth-astro/server";

const session = await getSession(Astro.request);

if (!session) {
  return Astro.redirect("/signin?redirect=/mascota/juegos/coin-clicker");
}
---

<Layout title="Clicker de Monedas">
  <div class="max-w-4xl mx-auto p-4">
    <div class="mb-6">
      <a
        href="/mascota/juegos"
        class="inline-flex items-center text-gray-600 hover:text-gray-800 transition-all"
      >
        ‚Üê Volver a juegos
      </a>
    </div>
    <CoinClickerGame client:only="preact" />
  </div>
</Layout>
